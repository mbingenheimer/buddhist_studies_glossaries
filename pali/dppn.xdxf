         <k>mānacchidda</k>
         <def cmt="person">
            <deftext>
               <b>
                  <c c="#a00149">Mānacchidda</c>
               </b>
               <br/>A Pacceka Buddha. <c c="#3b6bd3">MN.i.70</c> 
               <br/>
               <br/>
            </deftext>
         </def>
